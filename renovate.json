{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Fix lscr.io/linuxserver/qbittorrent versioning which does not follow semver",
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "lscr.io/linuxserver/qbittorrent"
      ],
      "allowedVersions": "/^(?<major>\\d{1})\\.(?<minor>\\d+)\\.(?<fix>\\d+)$/"
    }
  ]
}
